#:kivy 1.0

TabbedPanel:
    do_default_tab: False
    TabbedPanelItem:
    	text: 'Morphology'
	    GridLayout:
	        cols: 2
	        Label:
	            text: "Input:"
	            size_hint_x: None
	            size_hint_y: None
	            width: 120
	            height: 32
	            valign: "top"
	        TextInput:
	        	id: morph_input
	            text: ''
	            height: 60
	            size_hint_y: None
	        Label:
	            text: ""
	            size_hint_x: None
	            size_hint_y: None
	            height: 60
	            width: 120
	        Spinner:
	        	id: lang_selector
	            size_hint_y: None
	            height: 60
	            text: "Select a language"
	            values: "Add languages...",
	            on_text: app.show_download()
	        Label:
	            text: ""
	            size_hint_x: None
	            size_hint_y: None
	            height: 60
	            width: 120
		    GridLayout:
		        cols: 2
		        size_hint_y: None
		        height: 60
		        Button:
		        	text: "Analyze"
		        	on_press: app.analyze()
		        Button:
		        	text: "Generate"
		        	on_press: app.generate()
	        Label:
	            text: "Output:"
	            size_hint_x: None
	            width: 120
	            valign: "top"
	        TextInput:
	        	id: morph_output
	            text: ''
	            multiline: True
	            readonly: True
    TabbedPanelItem:
        text: 'Disambiguate'
        BoxLayout:
		    GridLayout:
		        cols: 1
	            Label:
	                text: 'Text to analyze'
	                size_hint_y: None
	                height: 40
		        TextInput:
		        	id: cg_input
		            text: ''
		            multiline: True
		        Spinner:
		        	id: lang_selector_cg
		            size_hint_y: None
		            height: 60
		            text: "Select a language"
		            values: "Add languages...",
		            on_text: app.show_download_cg()
		        Button:
		        	text: "Analyze Text"
	                size_hint_y: None
	                height: 60
	                on_press: app.cg()
	        TextInput:
	        	id: cg_output
	            text: ''
	            multiline: True
	            readonly: True
    TabbedPanelItem:
        text: 'Dictionaries'
	    GridLayout:
	        cols: 1
	        Label:
	        	text: "Word:"
                size_hint_y: None
                height: 40
	        TextInput:
	        	id: dict_input
	            text: ''
                size_hint_y: None
                height: 40
	        Spinner:
	        	id: lang_selector_dict
	            size_hint_y: None
	            height: 60
	            text: "Select a language"
	            values: "Add languages...",
	            on_text: app.show_download_dict()
	        Button:
	        	text: "Search"
                size_hint_y: None
                height: 60
                on_press: app.dictionary()
	        TextInput:
	        	id: dict_output
	            text: ''
	            multiline: True
	            readonly: True
    TabbedPanelItem:
        text: 'About'
        GridLayout:
			cols: 1
	        Label:
	            text: 'This is a user interface for the Python library called UralicNLP. Please read the project\'s readme\n\nBrought to you by Mika Hämäläinen, Rootroo Ltd\n\nIf you use this tool in any academic work, please cite: \n\nHämäläinen, M. (2019) UralicNLP: An NLP Library for Uralic Languages. Journal of Open Source Software. \n\n(c) Mika Hämäläinen 2021 All rights reserved'
	        Image:
	        	size_hint_y: None
	    		source: 'rootroo.png'
	    		size: (128,128)
